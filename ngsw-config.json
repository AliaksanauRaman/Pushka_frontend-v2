{
  "$schema": "./node_modules/@angular/service-worker/config/schema.json",
  "index": "/index.html",
  "assetGroups": [
    {
      "name": "app",
      "installMode": "prefetch",
      "resources": {
        "files": [
          "/favicon.ico",
          "/index.html",
          "/manifest.webmanifest",
          "/*.css",
          "/*.js"
        ]
      }
    },
    {
      "name": "fonts",
      "installMode": "prefetch",
      "updateMode": "prefetch",
      "resources": {
        "files": ["/assets/fonts/**"]
      }
    },
    {
      "name": "assets",
      "installMode": "lazy",
      "updateMode": "prefetch",
      "resources": {
        "files": ["/assets/icons/**", "/assets/images/**"]
      }
    },
    {
      "name": "translations",
      "installMode": "lazy", 
      "updateMode": "prefetch",
      "resources": {
        "files": [
          "/assets/i18n/ru.json",
          "/assets/i18n/by.json",
          "/assets/i18n/en.json"
        ]
      }
    }
  ],
  "dataGroups": [
    {
      "version": 2,
      "name": "places",
      "urls": ["https://pushka-backend.herokuapp.com/api/places"],
      "cacheConfig": {
        "maxSize": 10,
        "maxAge": "12h",
        "timeout": "10s",
        "strategy": "performance"
      }
    },
    {
      "version": 1,
      "name": "help-requests",
      "urls": ["https://pushka-backend.herokuapp.com/api/help-requests"],
      "cacheConfig": {
        "maxSize": 5,
        "maxAge": "10m",
        "timeout": "10s",
        "strategy": "freshness"
      },
      "cacheQueryOptions": {
        "ignoreSearch": false
      }
    },
    {
      "version": 1,
      "name": "delivery-offers",
      "urls": ["https://pushka-backend.herokuapp.com/api/help-offers"],
      "cacheConfig": {
        "maxSize": 5,
        "maxAge": "10m",
        "timeout": "10s",
        "strategy": "freshness"
      },
      "cacheQueryOptions": {
        "ignoreSearch": false
      }
    }
  ]
}
