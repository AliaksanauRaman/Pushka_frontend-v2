{
  "$schema": "./node_modules/@angular/service-worker/config/schema.json",
  "index": "/index.html",
  "assetGroups": [
    {
      "name": "app",
      "installMode": "prefetch",
      "resources": {
        "files": [
          "/favicon.ico",
          "/index.html",
          "/manifest.webmanifest",
          "/*.css",
          "/*.js"
        ]
      }
    },
    {
      "name": "assets",
      "installMode": "lazy",
      "updateMode": "prefetch",
      "resources": {
        "files": ["/assets/fonts/**", "/assets/icons/**", "/assets/images/**"]
      }
    }
  ],
  "dataGroups": [
    {
      "name": "translations",
      "urls": [
        "https://pushka.dev/assets/i18n/ru.json",
        "https://pushka.dev/assets/i18n/by.json",
        "https://pushka.dev/assets/i18n/en.json",
        "https://www.pushka.dev/assets/i18n/ru.json",
        "https://www.pushka.dev/assets/i18n/by.json",
        "https://www.pushka.dev/assets/i18n/en.json"
      ],
      "cacheConfig": {
        "maxSize": 10,
        "maxAge": "7d",
        "timeout": "3s",
        "strategy": "performance"
      }
    },
    {
      "name": "places",
      "urls": ["https://pushka-backend.herokuapp.com/api/places"],
      "cacheConfig": {
        "maxSize": 100,
        "maxAge": "7d",
        "timeout": "10s",
        "strategy": "performance"
      }
    }
  ]
}
